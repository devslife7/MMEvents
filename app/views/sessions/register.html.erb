<div id="register" class="container notification">
    <ul class="error-color">
        <% if @user.errors.any? %>
            <% @user.errors.full_messages.each do |message| %>
                <li>- <%= message %></li><br>
            <% end %>
        <% end %>
    </ul>

    <%= form_for @user, url: register_path do |f| %>
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'input is-rounded' %><br><br>

        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'input is-rounded' %><br><br>

        <%= f.label :username %>
        <%= f.text_field :username, class: 'input is-rounded' %><br><br>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'input is-rounded' %><br><br>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'input is-rounded'%><br><br>

        <%= f.submit "Register", class: 'button is-info' %>
    <% end %>
</div>