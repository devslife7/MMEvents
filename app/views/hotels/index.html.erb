<div class="display-4 custom-title"> Hotels in association with M&MEvents </div>
<div class="container notification margin-top">

    <div id="filter-form">
        <%= form_tag hotels_path, method: "GET" do %>
            <%= label_tag "Filter by location: " %>
            <div class="select">
            <%= collection_select :location, :id, Location.all, :id, :city, prompt: "Select location", selected: @location %>
            </div>
            <%= submit_tag "Filter" , class: "button is-info"%>
        <% end %>
    </div>
        <%# <%= button_to "all hotels", hotels_path, method: :get, id: "filter-all", class: "button" %>
    

    <div>
    </div>
    <div class="hotel-titles">
        <% @hotels.each do |hotel| %>
            <%# <li><%= link_to hotel.name, hotel_path(hotel.id), class: "no-text-decoration hotel-links" %>
            <div id="hotel-card" class="card">
                <a href ="hotels/<%=hotel.id%>">
                    <img id="hotel-img" src=<%= image_path("book-today-disc.png") %> class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <strong><p class="card-text"> <%= hotel.name %></p></strong>
                    <strong><p class="card-text"> <%= hotel.location.city %></p></strong>
                </div>
            </div>
            
        <% end %>

        
    </div>

    
</div>